@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />
    <input class="text" type="password" asp-for="Password" name="Password" placeholder="Password" required="">
    <input class="text w3lpass" type="password" asp-for="ConfirmedPassword" name="ConfirmedPassword" placeholder="Confirm Password" required="">
    <input type="submit" value="Change Password">
</form>