@model EmployeeViewModel
@{
    var depts = new SelectList(ViewData["Departments"] as IEnumerable<Department>, "Id", "Name");
}
<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Adress" class="col-form-label"></label>
    <input asp-for="Adress" class="form-control" />
    <span asp-validation-for="Adress" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Phone" class="col-form-label"></label>
    <input asp-for="Phone" class="form-control" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Salary" class="col-form-label"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="IsActive" class="form-check"></label>
    <input asp-for="IsActive" class="form-check" />
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="HiringDate" class="col-form-label"></label>
    <input asp-for="HiringDate" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="WorkFor" class="col-form-label"></label>
    <select asp-for="WorkForId" asp-items="depts" class="form-control"><option value="@null">--Select Department</option></select>
</div>
<div class="form-group">
    <label asp-for="Image" class="col-form-label"></label>
    <input type="file" asp-for="Image" class="form-control" />
</div>

